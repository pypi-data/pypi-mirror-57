# Exclude *.py files generated by build.
exclude dptdb/dptapi.py
exclude dptdb/version.py
# Exclude files in package_data generated by build.
# File usually does not exist yet when preparing manifest, so warning is given.
exclude dptdb/_dptapi.pyd
# Include DPT licence.
include licence.txt
# Include dptdb licence.
include LICENCE
# Include contact details.
include CONTACT
# Include the makefile.
include dptMakefile
# Include setup scripts for Wine and Microsoft Windows builds.
include setup.py
include _wine_setup.py
# Include build helpers.
include dptversion.py
# Include additions to SWIG definition file.
include extend_dptapi_python
# Include tests.
include test/pydpt-test.py
