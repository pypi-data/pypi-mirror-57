#!/usr/bin/env python

import sys
from pygrate import migrate
from pygrate import seed


def print_usage():
    print("Usage: pygrate [--migrate | --seed]")


if len(sys.argv) != 2 or sys.argv[1] not in ["--migrate", "--seed"]:
    print_usage()
    sys.exit(1)

if sys.argv[1] == "--migrate":
    migrate.apply()

if sys.argv[1] == "--seed":
    seed.apply()
