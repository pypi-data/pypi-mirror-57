{% for decorator in function.decorators -%}
{{ '@' -}}{{ decorator -}}{{ '\n' -}}
{% endfor -%}
{{ '# pylint: disable=arguments-differ,redefined-outer-name,redefined-builtin\n' -}}
{{ 'def ' -}}{{ function.name -}}{{ '(\n' -}}
{% filter indent(4, True) -%}
    {% for argument in function.arguments -%}
        {% include "common/argument.py.jinja2" with context -%}
        {{ ",\n" if not loop.last else "\n" -}}
    {% endfor -%}
{% endfilter -%}
{{ ') -> ' -}}{{ function.return_type.render() -}}{{ ':\n' -}}
{% filter indent(4, True) -%}
    {% with docstring = function.docstring if render_docstrings else None -%}
        {% if not docstring and not function.body -%}
            {{ 'pass' -}}
        {% endif -%}
        {% if docstring -%}
            {{ '"""\n' -}}
            {{ docstring -}}
            {{ '\n' -}}
            {{ '"""\n' -}}
        {% endif -%}
    {% endwith -%}
    {% if function.body -%}
        {{ function.body -}}
        {{ '\n' -}}
    {% endif -%}
{% endfilter -%}
